html,body,#main,#main-section{
    margin: 0;
    width: 100%;
    height: 100%;
}


#fileUpload-field{
    width: 100%;
    height: 100%;
    display: table;
}
input[type="file"]{
    width: 100%;
    height: 100px;
    opacity: 0;
    cursor: copy;
}
#fileUpload{
    width: 100%;
    height: 100px;
    background:white;
    vertical-align: middle;
    display: table-cell;
    text-align: center;
}
#fileUpload .inputText {
    width: 270px;
    margin-top: 10px;
    height: 20px;
    font-size: 24px;
    border: 0;
    border-bottom: 1px solid #BBBABA;
    outline: none;
    padding: 5px;
    color: gray;
}
#fileUpload > div{
    width: 300px;
    height: 100px;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);
    margin: 0 auto;
}
#fileUpload label{
    border-bottom: 1px dashed rgba(0,0,0,0.5);
    width: 100%;
    display: block;
    line-height: 26px;
    font-size: 18px;
}
#fileUpload button{
    width: 100%;
    line-height: 26px;
    background: white;
    outline: none;
    border: none;
    transition: all .5s;
    font-size: 16px;
    border-top: 1px solid rgba(0,0,0,0.5);
    border-bottom: 1px solid rgba(0,0,0,0.5);
    cursor: not-allowed;
}
#fileUpload button:hover{
    background: rgba(0,0,0,0.5);
    color:white;
}
#fileUpload button.active{
    box-shadow: 0px 0px 4px rgba(0,0,0,0.5);
    border: 1px solid black;
    width: 50%;
    background: rgba(0,0,0,1);
    color:white;
    cursor: pointer;
}
#fileUpload .mask{
    position: absolute;
    top: 50%;
    text-align: center;
    left: 50%;
    width: 80px;
    height: 16px;
    margin-top: -8px;
    margin-left: -150px;
    color: rgba(0,0,0,0.5);
    font-size: 16px;
    transition: all .5s;
    overflow: hidden;
}
#fileUpload .mask.active{
    color:gray;
    margin-top: -24px;
    line-height: 24px;
    height: 48px;
}
#fileUpload .progress{
    background: #ffdd00;
    width: 0px;
    height: 100px;
    position: absolute;
    transition: width 0.2s;
    opacity:0.3;
}